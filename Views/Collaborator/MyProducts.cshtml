@model IEnumerable<Product>
@{ ViewData["Title"] = "Produsele Mele"; }

<div class="mb-4 d-flex justify-content-between align-items-center">
    <h1>üì¶ Produsele Mele</h1>
    <a href="@Url.Action("CreateProduct", "Collaborator")" class="btn btn-success">‚ûï Propune Produs Nou</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Nu ai niciun produs. AdaugƒÉ unul!</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Titlu</th>
                    <th>Categorie</th>
                    <th>Pre»õ</th>
                    <th>Stoc</th>
                    <th>Status</th>
                    <th>Ac»õiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>#@product.Id</td>
                        <td>@product.Title</td>
                        <td>@product.Category?.Name</td>
                        <td>@product.Price.ToString("F2") RON</td>
                        <td>@product.Stock</td>
                        <td>
                            @if (product.Status == ProductStatus.Aprobat)
                            {
                                <span class="badge bg-success">Aprobat</span>
                            }
                            else if (product.Status == ProductStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">√én a»ôteptare</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Respins</span>
                                @if (!string.IsNullOrEmpty(product.RejectionReason))
                                {
                                    <br /><small class="text-muted">@product.RejectionReason</small>
                                }
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("EditProduct", "Collaborator", new { id = product.Id })" class="btn btn-sm btn-warning">‚úèÔ∏è EditeazƒÉ</a>
                            <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Sigur vrei sƒÉ »ôtergi acest produs?')">üóëÔ∏è »òterge</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
