@model Product
@{ ViewData["Title"] = "AdaugÄƒ Produs Nou"; }

<div class="mb-4">
    <h1>âž• AdaugÄƒ Produs Nou</h1>
    <p class="text-muted">Produsul va fi trimis pentru aprobare de cÄƒtre admin.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Title" class="form-label">Titlu *</label>
                    <input asp-for="Title" class="form-control" placeholder="Ex: Laptop Gaming ASUS" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label">Categorie *</label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">SelecteazÄƒ categoria</option>
                        @foreach (var cat in ViewBag.Categories as IEnumerable<Category>)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Descriere *</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descriere detaliatÄƒ a produsului..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Price" class="form-label">PreÈ› (RON) *</label>
                    <input asp-for="Price" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Stock" class="form-label">Stoc *</label>
                    <input asp-for="Stock" type="number" min="0" class="form-control" placeholder="0" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Imagine</label>
                    <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                    <small class="text-muted">Max 5MB. Formate: jpg, png, gif</small>
                    @if (ViewData.ModelState["ImageFile"] != null)
                    {
                        <span class="text-danger">@ViewData.ModelState["ImageFile"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                    }
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">ðŸ’¾ SalveazÄƒ Produs</button>
                <a href="@Url.Action("MyProducts", "Collaborator")" class="btn btn-secondary">AnuleazÄƒ</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
