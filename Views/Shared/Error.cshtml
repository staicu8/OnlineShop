@model ErrorViewModel
@{ ViewData["Title"] = "Eroare"; }

<div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
        <h1 class="display-1 text-danger">❌</h1>
        <h2>@ViewData["Title"]</h2>
        <p class="lead">@Model?.Message ?? "A apărut o eroare neașteptată."</p>
        @if (Model?.ShowRequestId == true)
        {
            <p class="text-muted small">Request ID: @Model.RequestId</p>
        }
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Înapoi la Home</a>
    </div>
</div>
